<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/chat"
        android:background="@color/white">

        <LinearLayout android:layout_width="match_parent"
            android:background="#f0f0f0"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logokonsul" />

                <TextView
                    android:text="Nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama"
                    android:background="#fff"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/backdrop"
                    android:paddingRight="15dp"
                    android:padding="10dp"
                    android:textStyle="normal|bold"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:text="Spesialis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spesialis"
                    android:textColor="@color/grey"
                    android:background="#fff"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_below="@+id/nama"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c"
                    android:text="Penilaian Klien"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:background="#DBDBDB"
                    android:drawableBottom="@drawable/borderbottom"
                    android:textColor="#000"
                    />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c"
                    android:layout_centerHorizontal="true"
                    android:layout_toStartOf="@+id/textView23"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_marginBottom="15dp"
                    android:stepSize="0.5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/d"
                    android:text="Jadwal"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:background="#DBDBDB"
                    android:drawableBottom="@drawable/borderbottom"
                    android:textColor="#000"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_views"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#fff"
                    android:padding="10dp"
                    android:layout_below="@+id/d"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/e"
                    android:text="No. STR"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:background="#DBDBDB"
                    android:drawableBottom="@drawable/borderbottom"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/str"
                    android:layout_below="@+id/e"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:text="Tentang Aplikasi"
                    android:textColor="#000"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/f"
                    android:text="Pendidikan"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:background="#DBDBDB"
                    android:drawableBottom="@drawable/borderbottom"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pendidikan"
                    android:layout_below="@+id/f"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:text="Tentang Aplikasi"
                    android:textColor="#000"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/g"
                    android:text="Tempat Praktik"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:background="#DBDBDB"
                    android:drawableBottom="@drawable/borderbottom"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/praktek"
                    android:layout_below="@+id/g"
                    android:padding="15dp"
                    android:textAlignment="center"
                    android:text="Tentang Aplikasi"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat"
        android:background="#009688"
        android:textColor="#fff"
        android:text="Chat Sekarang"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>